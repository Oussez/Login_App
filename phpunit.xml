<phpunit 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
			bootstrap="vendor/autoload.php"
			colors="true">

   <testsuites>
        <testsuite name="Test Unit Assertion 1">
            <directory>./tests</directory>  <!-- iÃ§i on met le chemin de ou des fichiers class test -->
			<file>./tests/Maintest.php</file>
        </testsuite>
		
		<!-- <testsuite name="Test Unit Assertion 2">
            <directory>./tests</directory>   //iÃ§i on met le chemin de ou des fichiers class test 
			<file>./tests/tests_b.php</file>
        </testsuite>  --> 
    </testsuites>
    
    <coverage processUncoveredFiles="true">
		<include>
			<directory suffix=".php">./tests</directory>
		</include>
   </coverage>
   
   <filter>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">./tests</directory>
             <file>./tests/Maintest.php</file>
			 <!-- <file>./tests/tests_b.php</file>  -->
	  </whitelist>
	</filter>
	
	
